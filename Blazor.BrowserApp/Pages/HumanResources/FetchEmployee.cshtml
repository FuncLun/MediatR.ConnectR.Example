@page "/humanresources/fetchemployee"
@inherits FetchEmployeeModel

<h1>Employee Data</h1>

<p>This component demonstrates fetching Employee data from the server.</p>


<p>
    <a href="@HumanResourcesPages.AddEmployee">Create New</a>
</p>

@if (Employees == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class='table'>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Department</th>
                <th>City</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Employees)
            {
                <tr>
                    <td>@emp.EmployeeId</td>
                    <td>@emp.Name</td>
                    <td>@emp.Gender</td>
                    <td>@emp.Department</td>
                    <td>@emp.City</td>
                    <td>
                        <a href='@HumanResourcesPages.EditEmployee/@emp.EmployeeId'>Edit</a>  |
                        <a href='@HumanResourcesPages.DeleteEmployee/@emp.EmployeeId'>Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
